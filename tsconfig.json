{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "sourceMap": true,
    "noImplicitAny": false,
    "noLib": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "declaration": true
  },
  "files": [
    "./typings/index.d.ts",
    "src/index.ts"
  ],
  "filesGlob": [
    "!./node_modules/**"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
